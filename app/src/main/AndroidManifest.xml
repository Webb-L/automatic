<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.webb_l.automatic">

    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoAccessibility">
        <activity android:name=".acitivity.EditAutoMaticActivity"></activity>
        <activity
            android:name=".acitivity.SelectPackageActivity"
            android:label="@string/select_package"
            android:theme="@style/Theme.AutoAccessibility.NoActionBar" />
        <activity android:name=".acitivity.AddStepActivity" /> <!-- <activity android:name=".acitivity.Main2Activity"></activity> -->
        <activity android:name=".Main2Activity" />

        <service
            android:name=".service.AutoAccessibilityService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/auto_accessibility_service_config" />
        </service>

        <activity android:name=".acitivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>